{
  "env": {
    "browser": true,
    "es6": true,
    "amd": true
  },
  "extends": ["plugin:prettier/recommended"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "sourceType": "module",
    "requireConfigFile": false,
    "allowImportExportEverywhere": true
  },
  "plugins": ["prettier"],
  "rules": {
    "require-await": "warn"
  },
  "globals": {
    "require": false,
    "requirejs": false
  }
}
