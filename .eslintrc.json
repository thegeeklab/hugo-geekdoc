{
  "env": {
    "browser": true,
    "es2017": true
  },
  "extends": ["plugin:prettier/recommended"],
  "parserOptions": {
    "sourceType": "module",
    "requireConfigFile": false,
    "allowImportExportEverywhere": true
  },
  "plugins": ["prettier"],
  "rules": {
    "require-await": "warn"
  },
  "globals": {
    "require": false,
    "requirejs": false
  }
}
